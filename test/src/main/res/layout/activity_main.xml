<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rg_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="toast" />

        <RadioButton
            android:id="@+id/rb_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="float" />

        <RadioButton
            android:id="@+id/rb_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tag_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="A" />

        <RadioButton
            android:id="@+id/tag_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B" />

        <RadioButton
            android:id="@+id/tag_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/show_immediately"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowImmediately" />

        <RadioButton
            android:id="@+id/insert_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InsertHead" />

        <RadioButton
            android:id="@+id/append_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="AppendTail" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/reject_expelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rejectExpelled" />

    <CheckBox
        android:id="@+id/reject_dismissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rejectDismissed" />

    <CheckBox
        android:id="@+id/expel_existing_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expelWaitingTask" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE BUILDER" />
</LinearLayout>